{% extends 'base.html.twig' %}

{% block body %}
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('product_index') }}">Product</a>
        </li>
        <li class="breadcrumb-item active">Show</li>
    </ol>
    <div id="row">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Product</h3>
                <a href="{{ path('product_delete', {'id': product.id }) }}"
                   onclick="return confirm('Are you sure you want to delete this?')" class="btn btn-danger" role="button">
                    Delete
                </a>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label class="form-control-label required" for="product_name">Name</label>
                    <input type="text" id="product_name" name="product[name]" readonly class="form-control" value="{{ product.name }}">
                </div>
                <div class="form-group">
                    <label class="form-control-label required" for="product_price">Price</label>
                    <div class="input-group">
                        <span class="input-group-addon">£ </span>
                        <input type="text" id="product_price" name="product[price]" readonly class="form-control" value="{{ product.price }}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-control-label required" for="product_cost">Cost</label>
                    <div class="input-group">
                        <span class="input-group-addon">£ </span>
                        <input type="text" id="product_cost" name="product[cost]" readonly class="form-control" value="{{ product.cost }}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-control-label required" for="product_weight">Weight</label>
                    <input type="number" id="product_weight" name="product[weight]" readonly class="form-control" value="{{ product.weight }}">
                </div>
                <div class="form-group">
                    <label class="form-control-label required" for="product_description">Description</label>
                    <input type="text" id="product_description" name="product[description]" readonly class="form-control" value="{{ product.description }}">
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="checkbox" id="product_isLive" name="product[isLive]" class="form-check-input" disabled {{ (product.isLive) ? 'checked' : '' }}> Is live
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-control-label required" for="product_postagePrice">Postage price</label>
                    <div class="input-group">
                        <span class="input-group-addon">£ </span>
                        <input type="text" id="product_postagePrice" name="product[postagePrice]" readonly class="form-control" value="{{ product.postagePrice }}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-control-label required" for="product_postageCost">Postage cost</label>
                    <div class="input-group">
                        <span class="input-group-addon">£ </span>
                        <input type="text" id="product_postageCost" name="product[postageCost]" readonly class="form-control" value="{{ product.postageCost }}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-control-label required" for="product_stock">Stock</label>
                    <input type="number" id="product_stock" name="product[stock]" readonly class="form-control" value="{{ product.stock }}">
                </div>
                <fieldset class="form-group">
                    <legend class="col-form-legend required">Allergies</legend>
                    <div id="product_allergies">
                        <ul>
                            {% for allergy in product.allergies %}
                                <li>{{ allergy.name }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </fieldset>
                <fieldset class="form-group">
                    <legend class="col-form-legend">Selection</legend>
                    <div id="product_selection">
                        {{ (product.selection is null) ? 'None' : product.selection.name  }}
                    </div>
                </fieldset>
                <div class="form-group">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="checkbox" id="product_dynamicSelection" name="product[dynamicSelection]" class="form-check-input" disabled {{ (product.dynamicSelection) ? 'checked' : '' }}> Can the user choose options from the selection provided?
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="product_dynamicSelectionNumber">
                        Number of options the user can select
                    </label>
                    <input type="number" id="product_dynamicSelectionNumber" name="product[dynamicSelectionNumber]" readonly class="form-control" value="{{ product.dynamicSelectionNumber }}">
                </div>

                <fieldset class="form-group">
                    <legend class="col-form-legend">Images</legend>
                    <ul>
                        {% for image in product.images %}
                            <li>{{ image.imageName }}</li>
                        {% endfor %}
                    </ul>
                </fieldset>

                <a role="button" href="{{ path('product_edit', {'id': product.id }) }}" class="btn btn-success">Edit</a>
            </div>
        </div>
    </div>
{% endblock %}


