{% extends 'base.html.twig' %}

{% block body %}
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('allergy_index') }}">Allergy</a>
        </li>
        <li class="breadcrumb-item active">Show</li>
    </ol>
    <div id="row">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Allergy</h3>
                <a href="{{ path('allergy_delete', {'id': allergy.id }) }}"
                   onclick="return confirm('Are you sure you want to delete this?')" class="btn btn-danger" role="button">
                    Delete
                </a>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label class="form-control-label required" for="allergy_name">Name</label>
                    <input type="text" id="allergy_name" name="allergy[name]" required="required" readonly="readonly" class="form-control" value="{{ allergy.name }}">
                </div>
                <a role="button" href="{{ path('allergy_edit', {'id': allergy.id }) }}" class="btn btn-success">Edit</a>
            </div>
        </div>
    </div>
{% endblock %}


