{% extends 'base.html.twig' %}

{% block body %}
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('selection_index') }}">Selection</a>
        </li>
        <li class="breadcrumb-item active">Show</li>
    </ol>
    <div id="row">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Selection</h3>
                <a href="{{ path('selection_delete', {'id': selection.id }) }}"
                   onclick="return confirm('Are you sure you want to delete this?')" class="btn btn-danger" role="button">
                    Delete
                </a>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label class="form-control-label required" for="selection_name">Name</label>
                    <input type="text" id="selection_name" name="selection[name]" required="required" readonly="readonly" class="form-control" value="{{ selection.name }}">
                </div>
                <div class="form-group">
                    <label class="form-control-label required" for="selection_items">Individual Chocolates</label>
                    <ul class="row">
                        {% for previewItem in selection.previewItems %}
                            <li class="col-4 text-center">{{ previewItem.name }}</li>
                        {% endfor %}
                    </ul>
                </div>
                <a role="button" href="{{ path('selection_edit', {'id': selection.id }) }}" class="btn btn-success">Edit</a>
            </div>
        </div>
    </div>
{% endblock %}


